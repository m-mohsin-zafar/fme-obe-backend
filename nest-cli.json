{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./assets",
        "outDir": "dist/",
        "watchAssets": true
      },
      {
        "include": "./pdfs",
        "outDir": "dist/",
        "watchAssets": true
      },
      {
        "include": "./html",
        "outDir": "dist/",
        "watchAssets": true
      },
      {
        "include": "./zip",
        "outDir": "dist/",
        "watchAssets": true
      }
    ]
  }
}
